<mvc:View controllerName="appchecklist.appchecklist.controller.View1"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m">
		<Page 
		title="Page"
		class="sapUiContentPadding" >
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="{i18n>appTitlePage}" level="H2"/>
				<ToolbarSpacer/>
			</Toolbar>
		</customHeader>
	<content>
	<Panel expandable="true" headerText="Datos Generales" width="auto" class="sapUiResponsiveMargin">
		<content>
				
          <!-- Ubicación Técnica {UbicacionTecnica}-->
          <Label text="Ubicación Técnica" />
          <Input value="" placeholder="Ingrese ubicación técnica" />
          <!-- Equipo {Equipo}-->
          <Label text="Equipo" />
          <Input value="" placeholder="Ingrese el equipo" />
          <!-- Punto de Medida {PuntoDeMedida}-->
          <Label text="Punto de Medida" />
          <Input value="" placeholder="Ingrese punto de medida" />
          <!-- Último documento medición {UltimoDocumentoMedicion}-->
          <Label text="Último documento medición" />
          <Input value="" placeholder="Ingrese documento medición" />
          <!-- OT {OT}-->
          <Label text="OT" />
          <Input value="" placeholder="Ingrese OT" />
          <!-- Fecha Inicio -->
          <Label text="Fecha Inicio" />
          <DatePicker  value="{
              path: '/FechaInicio',
              type: 'sap.ui.model.type.Date'}" displayFormat="dd-MM-yyyy" />
          <!-- Fecha Fin -->
          <Label text="Fecha Fin" />
          <DatePicker  value="{
              path: '/FechaFin',
              type: 'sap.ui.model.type.Date'}" displayFormat="dd-MM-yyyy" />
          <!-- Hora Inicio {HoraInicio}-->
          <Label text="Hora Inicio " />
          <TimePicker value="" />
          <!-- Hora Fin {HoraFin}-->
          <Label text="Hora Fin" />
          <TimePicker value="" />
            <!-- Operación -->
          <Label text="Operación" />
            <Select width="100%" selectedKey="{Operacion}">
                    <core:Item key="Operacion1" text="Operacion 0010" />
                    <core:Item key="Operacion2" text="Operacion 0020" />
                    <core:Item key="Operacion3" text="Operacion 0030" />
            </Select>
              <!-- HH Reales {HHReales}-->
          <Label text="HH Reales" />
          <Input	type="Number" value="" placeholder="Ingrese Horas" />

		</content>
	</Panel>
	<Panel expandable="true" headerText="Check List" width="auto" class="sapUiResponsiveMargin">
		<content>
				 <Table
          id="checklistTable"
          inset="false"
          width="100%"
          	items="{
			        path: '/CheckList'
		        }" 
          mode="None">
          
          <columns>
            <!-- Columna: Actividad -->
            <Column hAlign="Begin">
              <Text text="ACTIVIDAD" />
            </Column>
            <!-- Columna: Tarea -->
            <Column hAlign="Begin">
              <Text text="TAREA" />
            </Column>
            <!-- Columna: Estado -->
            <Column hAlign="Center">
              <Text text="ESTADO" />
            </Column>
            <!-- Columna: Observaciones -->
            <Column hAlign="Begin">
              <Text text="OBSERVACIONES" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <!-- Actividad -->
              <cells>
                <Text text="{Actividad}" />
                <!-- Tarea -->
                 <Text text="{Tarea}" />
                <!-- Estado -->
                <Select
                  forceSelection="true"
                  width="100%"
                  items="{
                    path: '/Estado'
                  }">
                  <core:Item key="{Select}" text="{Select}" />
                </Select>
                <!-- Observaciones -->
                <Input placeholder="Añadir comentario" />
              </cells>
            </ColumnListItem>
            <!-- Segunda fila 
            <ColumnListItem>
              <cells>
                <Text text="Calificación Diseño" />
                <Text text="Resistencia a golpes y vibraciones hasta 4G" />
                 <Select width="100%" selectedKey="{Estado}">
                    <core:Item key="Estado1" text="No Aprueba" />
                    <core:Item key="Estado2" text="No Aplica" />
                    <core:Item key="Estado3" text="Aprueba" />
                  </Select>
                <Input placeholder="Añadir comentario" />
              </cells>
            </ColumnListItem>
            -->
          </items>
        </Table>
		</content>
	</Panel>
	<Panel expandable="true" headerText="Datos numericos" width="auto" class="sapUiResponsiveMargin">
		<content>
			 <Table
          id="datosNumericosTable"
          inset="false"
          width="100%"
          	items="{
			        path: '/DatosNumericos'
		        }" 
          mode="None">
          <headerToolbar>
            <Toolbar>
              <Title text="Datos Numéricos Actividades" />
            </Toolbar>
          </headerToolbar>
          <columns>
            <!-- Columna Actividad -->
            <Column>
              <Text text="ACTIVIDAD" />
            </Column>
            <!-- Columna Tarea -->
            <Column>
              <Text text="TAREA" />
            </Column>
            <!-- Columna Bornes -->
            <Column>
              <Text text="BORNES" />
            </Column>
            <!-- Columna Medición -->
            <Column>
              <Text text="MEDICIÓN" />
            </Column>
            <!-- Columna Medición Anterior -->
            <Column>
              <Text text="MEDICIÓN ANTERIOR" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <!-- Actividad -->
                <Text text="{Actividad}" />
                <!-- Tarea -->
                <Text text="{Tarea}" />
                <!-- Bornes -->
                <Text text="{Bornes}" />
                <!-- Medición -->
                <Input text="{Medicion}" />
                <!-- Medición Anterior -->
                <Text text="{MedicionAnterior}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
		</content>
	</Panel>
	<Panel expandable="true" headerText="Recepción de trabajos" width="auto" class="sapUiResponsiveMargin">
		<content>
    	<l:VerticalLayout class="sapUiContentPadding" width="100%">
			 <!-- Sección Técnico -->
    
            <!-- Nombre Técnico {NombreTecnico1}-->
            <Label text="NOMBRE TÉCNICO 1:" />
            <Input value="" placeholder="Ingrese el nombre del técnico 1" />
             <!-- Nombre Técnico 2 {NombreTecnico2}-->
            <Label text="NOMBRE TÉCNICO 2:" />
            <Input value="" placeholder="Ingrese el nombre del técnico 2" />
            <!-- Empresa Contratista {EmpresaContratista}-->
            <Label text="EMPRESA CONTRATISTA:" />
            <Input value="" placeholder="Ingrese la empresa contratista" />
            <!-- Nombre ITO {NombreITO}-->
            <Label text="NOMBRE ITO:" />
            <Input value="" placeholder="Ingrese el nombre del ITO" />
            <!-- Nombre Supervisor 
            <Label text="NOMBRE SUPERVISOR:" />
            <Select width="100%" selectedKey="{NombreSupervisor}">
              <core:Item key="Supervisor1" text="Supervisor 1" />
              <core:Item key="Supervisor2" text="Supervisor 2" />
              <core:Item key="Supervisor3" text="Supervisor 3" />
            </Select>
            -->
             <!-- Nombre Supervisor {NombreSupervisor} -->
            <Label text="Nombre Supervisor:" />
            <Input value="" placeholder="Ingrese el nombre del Supervisor" />
           
            <!-- Nombre Operador {NombreOperador} -->
            <Label text="NOMBRE OPERADOR:" />
            <Input value="" placeholder="Ingrese el nombre del operador" />
            </l:VerticalLayout>
		</content>
	</Panel>
    </content>	

		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Adjuntos" press="onPress" />
				<Button type="Reject"
						text="Cancelar"
						press="onPressCancel"
						ariaDescribedBy="rejectButtonDescription genericButtonDescription">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
					<Button type="Accept"
						text="Guardar"
						press="onPressSave"
						ariaDescribedBy="acceptButtonDescription genericButtonDescription">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
